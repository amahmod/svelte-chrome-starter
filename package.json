{
    "name": "with-svelte",
    "displayName": "With svelte",
    "version": "0.0.0",
    "description": "A basic Plasmo extension.",
    "author": "lgvic",
    "packageManager": "pnpm@7.5.0",
    "scripts": {
        "format": "prettier --write './src/**/*.{js,svelte,html,ts}'",
        "lint": "eslint './src/**/*.{js,ts,svelte}'",
        "lint:fix": "eslint --fix './src/**/*.{js,ts,svelte}'",
        "prelint": "npm run format",
        "dev": "plasmo dev",
        "build": "plasmo build && npm run zip",
        "zip": "node scripts/build-zip.js",
        "prepare": "husky install"
    },
    "lint-staged": {
        "*.{js,ts,svelte}": [
            "svelte-check",
            "npm run lint:fix"
        ]
    },
    "dependencies": {
        "plasmo": "0.64.5",
        "svelte": "3.55.1",
        "svelte-preprocess": "5.0.1"
    },
    "devDependencies": {
        "@plasmohq/prettier-plugin-sort-imports": "3.6.1",
        "@tsconfig/svelte": "^3.0.0",
        "@types/chrome": "0.0.212",
        "@types/node": "18.13.0",
        "@typescript-eslint/eslint-plugin": "^5.51.0",
        "@typescript-eslint/parser": "^5.51.0",
        "archiver": "^5.3.1",
        "eslint": "^8.33.0",
        "eslint-plugin-svelte3": "^4.0.0",
        "husky": "^8.0.3",
        "lint-staged": "^13.1.1",
        "prettier": "2.8.4",
        "prettier-plugin-svelte": "^2.9.0",
        "svelte-check": "^3.0.3",
        "typescript": "4.9.5"
    },
    "manifest": {
        "host_permissions": [
            "https://*/*"
        ]
    }
}
